---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import NavOption from "../components/NavOption.astro";
import Footer from "../components/Footer.astro";

import Galery from "../components/Galery.astro";
import GaleryImg from "../components/GaleryImg.astro";
import img from "../../public/conocer.jpg";

const link = "https://www.facebook.com/ConoceSur",
  nombre = "Conoce el sur de Veracruz";
const articulos = await Astro.glob("./posts/*.md");
articulos.reverse();
---

<Layout>
  <Navbar imagen={img.src} link={"/conoce-el-sur-de-Veracruz/"} nombre={nombre}>
    <NavOption link={"/conoce-el-sur-de-Veracruz/"} nombre={"Inicio"} />
    <NavOption link={"/conoce-el-sur-de-Veracruz/galeria"} nombre={"Galeria"} />
  </Navbar>
  <Galery>
    {articulos.map((x) => <GaleryImg link={x.frontmatter.imagen} />)}
  </Galery>
  <Footer
    link={link}
    nombre={"pÃ¡gina oficial de Conoce el sur de Veracruz"}
  />
</Layout>
